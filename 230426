# define _CRT_SECURE_NO_WARNINGS
# include<stdio.h>

//if 문

int main()
{
	int num = 0;						                	//변수를 선언하고 초기화
	printf("숫자를 입력하세요");
	scanf("%d", &num);
	if (num < 5)
	{
		printf("입력하신 숫자는 5보다 작습니다\n");

	}
	if (num == 5)
	{
		printf("입력하신 숫자는 5입니다.\n");
	}
	if (num > 5)
	{
		printf("입력하신 숫자는 5보다 큽니다.\n");
	}
  return 0;
}

// if, else문

int main()
{
	int num = 0;						          	      //변수를 선언하고 초기화
	printf("숫자를 입력하세요");
	scanf("%d", &num);
	if (num < 5)
	{
		printf("입력하신 숫자는 5보다 작습니다\n");

	}
	else
	{
		if (num == 5)
		{
			printf("입력하신 숫자는 5입니다.\n");
		}
		else
		{
			if (num > 5)
			{
				printf("입력하신 숫자는 5보다 큽니다.\n");
			}
		}
	}
	return 0;
}


// if else if else문

int main()
{
	int num = 0;							                 //변수를 선언하고 초기화
	printf("숫자를 입력하세요");
	scanf("%d", &num);
	if (num < 5)
	{
		printf("입력한 숫자는 5보다 작습니다");
	}
	else if (num == 5)
	{
		printf("입력한 숫자는 5 입니다");
	}
	else
	{
		printf("입력한 숫자는 5보다 큽니다");
	}
	
	return 0;
}

//중첩 if 문

int main() 
{
	int pm;
	printf("미세먼지 농도를 입력하시오:");
	scanf("%d", &pm);
	if (pm > 0)
	{
		if (pm <= 30) 
		{
			printf("미세먼지 농도가 좋으므로 마스크 쓰지 마라");
		}
		else // else는 하나만 사용 가능하다
		{
			if (pm <= 80)
			{
				printf("미세먼지 농도가 보통이므로 마스크 쓰라");
			}
		}
	}
}

//swtich문 

switch (정수식)
{
case 정수값 1;
	 문장 1;
	 break;

case 정수값 2;
	 문장2;
	 break;
		 .
		 .
default:		//어떤 CASE 에도 해당하지 않을경우
	break;      //break 생략 가능

}


int main()
{
	int num;
	printf("미세먼지 농도 선택\n");
	printf("1 : 좋음\n");
	printf("2 : 보통\n");
	printf("3 : 나쁨\n");
	printf("4 : 매우나쁨\n");
	scanf("%d", &num);
	switch (num)
	{
	case 1:
		printf("미세먼지가 적다 마스크 쓰지 마라\n");
		break;
	case 2:
		printf("미세먼지가 보통 마스크 써라\n");
		break;
	case 3:
		printf("미세먼지가 나쁨 고급 마스크 써라\n");
		break;
	case 4:
		printf("미세먼지가 매우나쁨 방독면 써라\n");
		break;

	default:
		printf("번호 잘 보고 넣어\n");
		break;
	}
}


//Switch case 문

int main()
{
	int num;
	printf("미세먼지 농도 선택\n");
	printf("1 : 좋음\n");
	printf("2 : 보통\n");
	printf("3 : 나쁨\n");
	printf("4 : 매우나쁨\n");
	scanf("%d", &num);
	switch (num)
	{
	case 1:
		printf("미세먼지가 적다 마스크 쓰지 마라\n");
		break;
	case 2:
		printf("미세먼지가 보통 마스크 써라\n");
		break;
	case 3:
		printf("미세먼지가 나쁨 고급 마스크 써라\n");
		break;
	case 4:
		printf("미세먼지가 매우나쁨 방독면 써라\n");
		break;

	default:
		printf("번호 잘 보고 넣어\n");
		break;
	}
}


// 반복문(while)

/*

while (조건식)  // loop statement
{
	반복할 코드;
	변환식;
}

*/


//while문

int main() {
	int weight = 80;
	int count = 0;
	while (weight > 50)
	{
		printf("매일 열심히 운동해서 1kg 뺀다.\n");
		weight--;
		count++;
	}
	printf("축하합니다, 운동 그만해도 됩니다\n");
	printf(" %d일 운동했습니다\n",count);
	return 0;
}

%%%% F10을눌러서 중간값을 확인하며 코딩할 수 있다 %%%%

//do while
//do
//{
//	반복할 코드; // 조건식에 관계없이 무조건 한번 실행
//	변화식;     // 
//} while (조건식);


//do while문 

int main()
{
	int weight = 80;
	int count = 0;
	int select;
	do
	{
		printf("빡시게 운동해서 1kg 뺀다\n");
		weight--;
		count++;
		printf("운동을 더 하나요?\n");
		printf("1:yes,  2: no(숫자를 입력하시오)\n");
		scanf("%d", &select);
		if (select == 2) break;
	} while (weight > 50);
	printf("축하합니다 운동 안해도 됩니다\n");
	printf("%d 일 운동했네\n",count);
	return 0;
}

//for문
//for문(초기화; 조건(참일때); 증감식)
//{
//	반복할 코드;
//}



// for 문

int main()
{
	int weight = 0;
	int count = 0;
	for (weight = 80; weight > 50; weight--)
	{
		printf("빡시게 운동해서 1kg 뺏음 \n"); 
		count++;
	}
	printf("축하합니다 운동 안해도 됩니다 \n");
	printf("%d 일 운동했네 \n",count);
}

//for문 

int main()
{
	int sum = 0;
	for (unsigned i = 0; i < 100 && sum < 2000; i++)
	{
		sum += i;
	}
	printf("%d\n", sum);
}

//for 문

int main()
{
	int i, j;
	for (i = 0; i < 5; i++)
	{
		printf("외부시작 %d\n", i);
		for (j = 0; j < 3; j++)
		{
			printf("내부수행 %d\n", j);
		}
		printf("외부 끝 %d\n", i);
	}
	return 0;
}

// 제어변수 여래개를 이용한 FOR 문
for(i=0, j=0;i<100 && j>0;i++,j++)

//초기식, 조건식, 증감식, 반복 문장의 일부를 생략 가능
for(; i <10; i++)
for(i = 0; ; i++)
for(i = 0; i<10; )
for (i = 0; i < 10)
{
	 ;
}
// for(i=0; i <10; printf("%d", i++)){}

// for문을 이용한 언덕 그리기

int main()
{
	int i, j;
	for (i = 0; i < 5; i++)
	{
		for (j = 0; j <= i; j++)
		{
			printf("*");

		}
			printf("\n");
	}
	for (i = 4; i > 0; i--)
	{
		for (j = 0; j < i; j++)
		{
			printf("*");
		}
		printf("\n");
	}
	return 0;
}

//구구단

int main()
{
	int n;
	int i = 1;
	printf("출력 하고싶은 단수?:\n");
	scanf("%d", &n);
	while (i <= 9)
	{
		printf("%d * %d = %d\n", n, i, n * i);
		i++;
	}
	return 0;
}


